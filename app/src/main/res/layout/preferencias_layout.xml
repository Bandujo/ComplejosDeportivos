<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/preferencias_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.infomovil.sergio.MisComplejosDeportivos.GeneralMap"
    >
    <android.support.v7.widget.Toolbar
        android:id="@+id/tb_preferencias"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:title="@string/preferencias"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:titleTextColor="@color/white"
        app:titleTextAppearance="@style/TituloActivities"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:orientation="horizontal"
        android:clickable="true">
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cbPref"
        android:layout_marginLeft="10dp"
        android:checked="true"
        android:onClick="onCheckboxClicked"
        android:text="@string/prefText"
        style="@style/InfoCentros"
        android:textSize="18sp"
        android:textStyle="bold"
        />
    </LinearLayout>
</LinearLayout>
